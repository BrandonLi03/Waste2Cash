<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashPage">

    <ImageView
        android:id="@+id/splash_img"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/darkGreen"/>

    <TextView
        android:id="@+id/splash_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Waste2Cash"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/splash_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/splash_img"/>

    <TextView
        android:id="@+id/splash_tv_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/darkGreen"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/splash_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/splash_tv_slogan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Care for Waste Management,\nCare for the Future"
        android:textAlignment="center"
        android:textSize="17sp"
        android:textColor="@color/darkGreen"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/splash_tv_welcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/splash_btn_sign_in"
        android:layout_width="360dp"
        android:layout_height="65dp"
        android:text="Sign In"
        android:background="@drawable/sign_green_button"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/splash_tv_slogan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/splash_btn_sign_up"
        android:layout_width="360dp"
        android:layout_height="65dp"
        android:text="Sign Up"
        android:background="@drawable/sign_transparent_button"
        android:textSize="20sp"
        android:textColor="@color/darkGreen"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/splash_btn_sign_in"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
